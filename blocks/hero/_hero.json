          { "name": "Image Left", "value": "image-left" },
          { "name": "Image Right", "value": "image-right" }
        ]
      },
      {
        "component": "text",
        "name": "title",
        "label": "Headline",
        "valueType": "string"
      },
      {
        "component": "image",
        "name": "image",
        "label": "Hero Image",
        "valueType": "string"
      }
    ]
  }
