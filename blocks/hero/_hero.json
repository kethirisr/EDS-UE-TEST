{
  "definition": {
    "title": "Hero",
    "id": "hero",
    "plugins": {
      "xwalk": {
        "page": {
          "resourceType": "core/franklin/components/block/v1/block",
          "template": {
            "name": "Hero",
            "model": "hero",
            "title": "Welcome to Our Platform",
            "classes": "centered",
            "image": "https://example.com/hero.jpg"
          }
        }
      }
    }
  },
  "model": {
    "id": "hero",
    "fields": [
      {
        "component": "select",
        "name": "classes",
